---
interface Props {
	title: string;
}

const { title} = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<script type="module">
			import { LoadPages } from '/js/load.js';

			document.addEventListener('DOMContentLoaded', () => {
				LoadPages()
			})
		</script>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!--================== BOXICONS ==================-->
		<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css'>
		<!--================== NOTIFLIX ==================-->
		<script defer src='../js/notiflix/notiflix.js' is:inline></script>
		<link rel='stylesheet' href='../js/notiflix/notiflix.css'>
		<!--================== CSS ==================-->
		<link rel="stylesheet" href="/css/input.css">
		<link rel="stylesheet" href="/css/modal.css">
		<link rel="stylesheet" href="/css/table.css">
		<!--================== SCRIPTS==================-->
		<script async defer src="https://apis.google.com/js/api.js" id="gapi"></script>
		<script async defer src="https://accounts.google.com/gsi/client" id="gis"></script>
		<!--================== DATATABLE ==================-->
		<link rel='stylesheet' href='https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css'>
		<link rel='stylesheet' href='https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css'>
		<link rel='stylesheet' href='https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css'>
		<!--================== TITLE ==================-->
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<!--================== MEDIA QUERYS ==================-->
	<script type='text/javascript' src='https://code.jquery.com/jquery-3.7.0.js'></script>
	<script type='text/javascript' src='https://code.jquery.com/jquery-latest.js'></script>
	<!--================== DATATABLE ==================-->
	<script type='text/javascript' src='https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js'></script>
	<script type='text/javascript' src='https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js'></script>
	<script type='text/javascript' src="https://cdn.datatables.net/select/1.3.4/js/dataTables.select.min.js"></script>
	<!--================== BARCODE ==================-->
	<script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.6/dist/JsBarcode.all.min.js"></script>
	<!--================== SCRIPTS ==================-->
	<script async defer type="module" src="../js/sheets/auth.js" is:inline></script>
	<script async defer type="module" src="../js/sheets/sheets.js" is:inline></script>
	<script type="module" src="../js/index.js" is:inline></script>
	<script async defer type="module" src="../js/dataTable/dataTable.js" is:inline></script>

</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	

</style>
