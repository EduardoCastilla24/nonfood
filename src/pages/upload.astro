<script defer>
    function deleteCardFile(element, sectionId) {
        const cardContainer = element.closest('.cardFile-container');
        cardContainer.classList.add('animate-delete')
        setTimeout(() => {
            document.getElementById(`section_cardFiles${sectionId}`).innerHTML = '' ;
            cardContainer.remove();
        }, "500");
    }
</script>