---
import Layout from "../layouts/Layout.astro"
import InputLoad from "../components/InputLoad.astro"
import Modal from "../components/Modal.astro"
---

<Layout title="Subida de Archivos">
    <main class="flex items-center justify-center w-full p-8 bg-[#cbd0dc] h-screen">
        <Modal
            title="Subida de Archivos"
            subtitle="Selecciona y sube los archivos para la actualizacion de datos">
                <InputLoad
                title="J08 - Vestuario"
                input_id="upload-file_1"
                section_id="section_cardFiles1"/>
            <InputLoad
                title="J09 - Hogar"
                input_id="upload-file_2"
                section_id="section_cardFiles2"/>
            <InputLoad
                title="J10 - Bazar"
                input_id="upload-file_3"
                section_id="section_cardFiles3"/>
        </Modal>
    </main>
</Layout>

